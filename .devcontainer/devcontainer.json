{
    "name": "Simple Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode-remote.remote-containers",
                "ritwickdey.LiveServer"
            ]
        }
    },
    "remoteUser": "vscode",
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind"
}
